generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model Team {
  id               Int       @id @default(autoincrement()) 
  teamname         String    @unique
  teamlead         String    @unique
  email            String    @unique
  mobile           BigInt    @unique
  teamscore        Int    @default(0)
  progress         UserProgress[] 
  winners          Winner[]  
  lastSolvedAt      DateTime?  // Add this field if it doesn't exist

}

model Riddle {
  rid             String    @id @default(cuid()) 
  description     String  
  riddlecode      String  
  location        String  
  progress        UserProgress[]
}

model UserProgress {
  id            Int       @id @default(autoincrement())  
  teamId        Int                                      
  riddleId      String                                   
  attempts      Int       @default(0)
  score         Int       @default(0)
  lastSolvedAt  DateTime?                                

  team          Team      @relation(fields: [teamId], references: [id])
  riddle        Riddle    @relation(fields: [riddleId], references: [rid])

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@unique([teamId, riddleId]) 
}

model Winner {
  id         Int      @id @default(autoincrement())
  teamId     Int      
  team       Team     @relation(fields: [teamId], references: [id])
  rank       Int     
  score      Int      
  solvedAt   DateTime 

  createdAt  DateTime @default(now())
}
